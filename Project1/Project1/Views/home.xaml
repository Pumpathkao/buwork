                <StackLayout Margin="11,10,11,-4"
                              xct:ShadowEffect.Color="Black">
                    <Frame CornerRadius="30"
                       Padding="-0">
                        <ImageButton  Clicked="ImageButton_Clicked" 
                                      Aspect="AspectFill"
                                      HeightRequest="250"
                                      x:Name="image1"/>
                    </Frame>
                </StackLayout>
                <Frame Margin="10,10,10,0" 
                      BackgroundColor="#2D2D2D" 
                       xct:ShadowEffect.Color="Black"
                       Padding="15" CornerRadius="10" >
                    <StackLayout>
                        <Label Text="Customer" FontSize="Large" TextColor="White" Margin="0,0,0,0"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="8*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="Name" Margin="15,8,0,0" 
                                   HorizontalOptions="Center" 
                                   FontSize="Medium" 
                                   TextColor="DarkGray"
                                   VerticalOptions ="Center"/>
                            <Frame Grid.Column="1"
                                   xct:ShadowEffect.Color="DarkGray"
                                   Margin="10,10,10,0" Padding="5" 
                                   CornerRadius="10" >
                                <Label Grid.Column="1"  
                                       x:Name="name"
                                       FontSize="Body"
                                       TextColor="Black"/>
                            </Frame>
                            <Label Grid.Row="1" Text="Phone" 
                                   Margin="15,8,0,0" 
                                   TextColor="DarkGray"
                                   HorizontalOptions="Center"
                                   FontSize="Medium" VerticalOptions ="Center"/>
                            <Frame Grid.Row ="1"
                                   xct:ShadowEffect.Color="DarkGray"
                                   Grid.Column="1" Margin="10,10,10,0"
                                   Padding="5" CornerRadius="10" >
                                <Label Grid.Row="1"
                                       Grid.Column="1"  
                                       FontSize="Body"
                                       TextColor="Black"
                                       x:Name="phone"/>
                            </Frame>
                            <Label Grid.Row="2"
                                   Text="Email"  
                                   TextColor="DarkGray"
                                   Margin="15,10,0,0"
                                   HorizontalOptions="Center"
                                   FontSize="Medium"
                                   VerticalOptions ="Center"/>
                            <Frame Grid.Row ="2"
                                       xct:ShadowEffect.Color="DarkGray"
                                       Grid.Column="1" Margin="10,10,10,0" Padding="5" CornerRadius="10" >
                                <Label Grid.Row="1"
                                       Grid.Column="1" 
                                       FontSize="Body"
                                       TextColor="Black"
                                       x:Name="email"/>
                            </Frame>
                        </Grid>
                    </StackLayout>
                </Frame>
                <Frame Margin="10,10,10,0" 
                       BackgroundColor="#2D2D2D" 
                       Padding="15"
                       CornerRadius="10" 
                       xct:ShadowEffect.Color="Black">
                    <StackLayout>
                        <Label Text="Address"
                               FontSize="Large" 
                               TextColor="White" 
                               Margin="0,0,0,0"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Image  Margin="8" 
                                    x:Name="addressimg"
                                    HeightRequest="50"
                                    WidthRequest="50"/>
                            <Frame Grid.Column="1"
                                   xct:ShadowEffect.Color="DarkGray"
                                   Margin="0,5,0,20" 
                                   CornerRadius="10" Padding="5">
                                <Label  x:Name="address" 
                                        FontSize="Body"
                                        TextColor="Black" />
                            </Frame>
                        </Grid>
                    </StackLayout>
                </Frame>
                <Frame Margin="10,10,10,20"
                      xct:ShadowEffect.Color="Black"
                       BackgroundColor="#2D2D2D"
                       Padding="15"
                       CornerRadius="10" >
                    <StackLayout>
                        <Label Text="Deciption" 
                               FontSize="Large" 
                               TextColor="White" 
                               Margin="0,0,0,0"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="2" 
                                   x:Name="homeimg"
                                   Margin="18"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="1"
                                   FontSize="Medium"
                                   TextColor="DarkGray"
                                   Margin="10,11,10,0" 
                                   Text="Round "/>
                            <Frame Grid.Column="2" 
                                   xct:ShadowEffect.Color="Black"
                                   Margin="10,10,10,0" Padding="5" CornerRadius="10" >
                                <Label Grid.Column="2" 
                                       x:Name="round"
                                       FontSize="Body"/>
                            </Frame>
                            <Label Grid.Column="1" Grid.Row="1" 
                                   Margin="10,11,10,0" 
                                   FontSize="Medium"
                                   TextColor="DarkGray"
                                   Text="Date" />
                            <Frame Grid.Row ="1" 
                                   xct:ShadowEffect.Color="Black"
                                   Grid.Column="2" Margin="10,10,10,0" Padding="5" CornerRadius="10" >
                                <Label Grid.Row="1" Grid.Column="2" x:Name="dateound"/>
                            </Frame>
                        </Grid>
                    </StackLayout>
                </Frame>
                <Button Text="ปิดงาน" 
                        xct:ShadowEffect.Color="Black"
                        Clicked="Button_Clicked"
                        HorizontalOptions="CenterAndExpand"
                        CornerRadius="20"
                        WidthRequest="200"
                        Margin="0,-5,0,10"/>
                <Grid>
                    <xct:TabView TabStripPlacement="Bottom"
                                 TabStripBackgroundColor="#2D2D2D"
                                 TabStripHeight="65"
                                 TabContentBackgroundColor="White">

                        <xct:TabViewItem x:Name="searchimg"
                                         Text="Inspect"
                                         TextColor="White"
                                         TextColorSelected="White"
                                         FontSize="12"
                                         TabTapped="TabViewItem_TabTapped_1">
                            <Grid BackgroundColor="Gray">
                                <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="TabContent1" />
                            </Grid>
                        </xct:TabViewItem>

                        <xct:TabViewItem  x:Name="reporthimg"
                                          Text="Report"
                                          TextColor="White"
                                          TextColorSelected="white"
                                          FontSize="12" 
                                          TabTapped="TabViewItem_TabTapped">
                            <Grid BackgroundColor="Gray">
                                <Label HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Text="TabContent1" />
                            </Grid>
                        </xct:TabViewItem>
                    </xct:TabView>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>